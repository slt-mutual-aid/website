---
const currentPath = Astro.url.pathname;
---

<nav>
  <a href="/" aria-current={currentPath === "/" ? "page" : undefined}>Home</a>
  <a href="https://jobs.sltmutualaid.org" target="_blank" rel="noopener noreferrer">Job Board</a>
  <a href="/projects" aria-current={currentPath === "/projects" ? "page" : undefined}>Projects</a>
</nav>

<style>
  nav {
    display: flex;
    gap: 2rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid #3a3a3a;
    margin-bottom: 2rem;
  }

  nav a {
    color: #e0e0e0;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.1rem;
    transition: color 0.2s;
    position: relative;
  }

  nav a:hover {
    color: #5a9de8;
  }

  nav a[aria-current="page"] {
    color: #5a9de8;
  }

  nav a[aria-current="page"]::after {
    content: "";
    position: absolute;
    bottom: -1.5rem;
    left: 0;
    right: 0;
    height: 2px;
    background: #5a9de8;
  }
</style>

